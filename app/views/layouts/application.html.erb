<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title || "Larken Farms" %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class='<%= controller.controller_name %>'>

 <!--  <div id="header"> -->
 <%= image_tag('orange-cover.jpg', alt: "banner", :class => "banner") %>
    <div id="title">Larken Farms Orchard</div>
 <!--  </div> -->

  <div id="navbar">
      <ul>
        <li><a href="/" <% if @page == 'h' %>class="selected" <% end %>>Home</a></li>
        <li><a href="/about" <% if @page == 'a' %>class="selected" <% end %>>About Us</a></li>
        <li><a href="/peaches" <% if @page == 'p' %>class="selected" <% end %>>Our Peaches</a></li>
        <li><a href="/pricing" <% if @page == 'pr' %>class="selected" <% end %>>Pricing</a></li>
       <!--  STORE CATALOG: -->
        <li><a href="/store/index" <% if @page == 'o' %> class="selected" <% end %>>Ordering</a></li>
        <li><a href="/location" <% if @page == 'l' %>class="selected" <% end %>>Location</a></li>
        <li><a href="/contact" <% if @page == 'c' %>class="selected" <% end %>>Contact</a></li>
      </ul>
  </div>


  <div id="columns">
    <div id="side">
      <div id="cart">
            <!-- render @ cart?? -->
      </div>


      <% if session[:user_id] %>
        <ul>
          <li><%= link_to 'Orders', orders_path %></li>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'Admins', users_path %></li>
        </ul>
        <%= button_to 'Logout', logout_path, method: :delete %>
      <% end %>
    </div>
  </div>


    <div id="main">

          <%= yield %>

    </div>

</body>
</html>
