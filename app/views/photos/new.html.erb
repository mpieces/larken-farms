<h1>Upload Photo</h1>

<%= form_for @photo do |f| %>
  <!-- (render error messages) -->
  <div class="photo-caption">
    <p>Caption</p>
    <%= f.text_area :title, rows: 10, cols: 50 %>
  </div>

  <div class="photos">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <%= f.submit 'Upload' %>

<% end %>

<%= link_to "Back", photos_path %>