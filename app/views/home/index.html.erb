<% if flash[:notice].present? %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>

<% if flash[:error].present? %>
  <p class="error"><%= flash[:error] %></p>
<% end %>

<section id="home">
  <div id="slideshow">
    <div>
      <%= image_tag('dog.jpg', :class => "cover-photo") %>
    </div>
    <div>
      <%= image_tag('barn.jpg', :class => "cover-photo") %>
    </div>
    <div>
      <%= image_tag('boxes.jpg', :class => "cover-photo") %>
    </div>
    <div>
      <%= image_tag('family.jpg', :class => "cover-photo") %>
    </div>
    <div>
      <%= image_tag('truck.jpg', :class => "cover-photo") %>
    </div>
  </div>

  <div class="mailing_list">
    <h1>Stay updated!</h1>
    <br>
    <%= form_for Subscriber.new do |f| %>
      <%= f.email_field(:email, id: 'email', placeholder: 'me@example.com') %>
      <br>
      <br>
      <%= f.submit("Join", id: 'join') %>
    <% end %>
  </div>

  <div class="boxes">
    <div class="box1">
      <a href="/InSeasonNow">
        <div class="box">
          <%= image_tag('peach-icon.png')%>
          <p>In Season Now</p>
        </div>
      </a>
    </div>

    <div class="box2">
      <div class="box">
        <h2>Our hours: </h2>
        <h3>Monday-Friday</h3>
        <h3>9am-5pm*</h3>
        <h3>*Subject to change based on weather conditions</h3>
        <h3>Please call beforehand if coming to visit.</h3>
      </div>
    <!-- <div class="hours">
      <h2>Our hours:</h2>
      <h3>Monday-Friday</h3>
      <h3>9 am - 5 pm</h3>
    </div> -->

    </div>
    <div class="box3">
    <a href="/PickYourOwn">
      <div class="box">
        <%= image_tag('peach-icon.png')%>
        <p>Pick Your Own!</p>
      </div>
    </a>
  </div>
</div>

</section>

