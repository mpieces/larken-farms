<div class="page-title">
  <h2>Contact Us:</h2>
</div>
<hr />

<div class="farm_form">
  <fieldset>
    <legend>Please Enter Your Details</legend>
      <%= form_for(@contact) do |f| %>

        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, size: 40 %>
        </div>

        <div class="field">
          <%= f.label :email %><br>
          <%= f.email_field :email, size: 40 %>
        </div>

        <div class="field">
          <%= f.label :message %><br>
          <%= f.text_area :message, rows: 10, cols: 40 %>
        </div>

        <div class="actions">
          <%= f.submit 'Send message' %>
        </div>

      <% end %>
  </fieldset>
</div>














