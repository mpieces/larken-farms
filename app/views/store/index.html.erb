<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Larken Farms Products</h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
   <!--  Sanitize method allows us to safely add HTML stylings to make the descriptions for interesting for our customers. -->
    <div class="price_line">
     <!--  Number to currency helper method to format price as a currency -->
      <span class="price"><%= number_to_currency(product.price) %></span>
      <!-- Added later: -->

    </div>
  </div>
<% end %>